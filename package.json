{
  "name": "@kne-components/components-account",
  "version": "0.1.1",
  "files": [
    "build"
  ],
  "dependencies": {
    "@kne/use-control-value": "^0.1.8",
    "@kne/use-ref-callback": "^0.1.2",
    "@loadable/component": "^5.16.4",
    "js-cookie": "^3.0.5",
    "md5": "^2.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "^5.0.0"
  },
  "scripts": {
    "start": "cross-env PORT=3001 COMPONENTS_NAME=components-account MODULES_DEV_PUBLIC_URL=/ craco start",
    "build": "cross-env COMPONENTS_NAME=components-account MODULES_DEV_PUBLIC_URL=/components-account  craco build",
    "test": "craco test --coverage",
    "eject": "react-scripts eject",
    "init": "npm i --legacy-peer-deps",
    "create": "modules-dev-create",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@common/(.*)": "<rootDir>/src/common/$1",
      "^@components/(.*)": "<rootDir>/src/components/$1",
      "^@utils/(.*)": "<rootDir>/src/common/utils/$1"
    }
  },
  "devDependencies": {
    "@craco/craco": "^7.1.0",
    "@kne/modules-dev": "^2.0.6",
    "@kne/react-fetch": "^1.4.3",
    "@kne/remote-loader": "^1.2.3",
    "antd": "^5.14.1",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
    "cross-env": "^7.0.3",
    "http-proxy-middleware": "^2.0.6",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "prettier": "^2.8.8",
    "react-router-dom": "^6.22.1",
    "sass": "1.75.0"
  }
}
